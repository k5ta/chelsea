@import '~@/styles/mixins';

.section3 {
  background-color: #E0E0E0;
  background-image: url("@/assets/raster/3rd.png");
  background-repeat: no-repeat;
  background-size: 35%;
  background-position: right bottom;
  height: 100vh;
  width: 100%;
  padding-top: 6.875em;
  display: flex;
  align-content: stretch;
  overflow: hidden;
  +media-down(md) {
    min-height: 100vh;
    height: 100%;
    padding: 1.25em;
    padding-top: 6.875em;
    background-image: none;
  }
  +media-down(xs) {
    padding-top: 1.25em;
  }
}

.prices {
  padding: 3.125em;
  padding-top: 2em;
  width: 65%;
  height: 100%;
  font-weight: bold;
  +media-down(lg) {
    padding-top: 3.125em;
  }
  +media-down(md) {
    width: 100%;
    padding-left: 0;
    padding-top: 5em;
  }
  +media-down(xl) {
    height: 70%;
  }
  +media-down(xs) {
    padding: 0;
  }
}

.app {
  width: 35%;
  padding-left: 4em;
  padding-top: 6.5%;
  align-items: center;
  +media-down(md) {
    width: 100%;
    padding-top: 7em;
    padding-left: 0;
  }
  +media-down(xs) {
    padding-left: 0;
    padding-top: 2em;
  }
}

.apps {
  width: 100%;
}

.apps img {
  padding-right: 1em;
  +media-down(xs) {
    padding: 0.3em;
  }
  &::selection {
    background: none;
  }
}

.upper {
  font-size: 1.5em;
  text-transform: uppercase;
  margin-bottom: 1em;
  +media-down(xs) {
    margin-bottom: 0.4rem;
  }
}

.text {
  font-size: 1em;
  margin-bottom: 1em;
}

.row {
  width: 100%;
  height: 100%;
  padding: 3.125em;
  padding-top: 0;
  display: flex;
  flex-wrap: wrap;
  +media-down(md) {
    padding: 0;
  }
}

.prices-table {
  width: 100%;
  height: 100%;
  font-size: 1em;
  font-weight: bold;
  border-spacing: 0 1em;
  +media-down(lg) {
    font-size: 0.8em;
  }
  +media-down(xs) {
    width: 129.5%;
  }
  & td {
    padding: 0;
  }
}

.inside-table {
  height: 100%;
  width: 100%;
  border-collapse: collapse;
}

.complex-service {
  border-collapse: collapse;
}

.prices-table-hairstyle svg, svg use>svg {
  width: 2rem;
  fill: black
  :global(.st0) {
    fill: #bcbcbc
  }
  :global(.st1) {
    stroke: #bcbcbc
    fill: none
  }
  :global(.st2) {
    fill: #bcbcbc
  }
}

.prices-table-beardstyle svg, svg use>svg {
  width: 2rem;
  fill: #bcbcbc
  :global(.st0) {
    fill: black
  }
  :global(.st1) {
    stroke: #bcbcbc
    fill: none
  }
}

.table-block {
  padding-top: 2em;
  position: relative;
  +media-down(xs) {
    width: 100%;
    overflow-x: hidden;
    overflow-y: hidden;
  }
  +media-down(xl) {
    padding-top: 0.5em;
  }
}

.rows__white {
  background-color: #F6F6F6;
  border: 1px solid #F6F6F6;
  width: 10%;
  align-items: center;
}

.rows__pink {
  background-color: #D32E83;
  border: 1px solid #D32E83;
  width: 10%;
  color: #FFFFFF;
  text-align: center;
  font-size: 1.2em;
  +media-down(xs) {
    font-size: 1em;
  }
}

.row__empty {
  border: 1px solid #000000;
  border-left: 0;
  width: 10%;
}

.service-type {
  border-top: 1px solid #000000;
  border-bottom: 1px solid #000000;
  width: 47%;
  padding: 0.2em;
  padding-left: 1em;
  text-align: left;
  font-weight: normal;
  @media (min-width: 1440px) {
    padding: 0.5em;
    padding-left: 1em;
  }
  +media-down(xs) {
    width: 52%;
  }
}

.complex {
  text-transform: uppercase;
  color: #D32E83;
  &::selection {
    background: #FFFFFF;
  }
}

.price {
  border-top: 1px solid #000000;
  border-bottom: 1px solid #000000;
  width: 20%;
  +media-down(xs) {
    width: 15%;
    border-right: 1px solid #000000;
  }
}

.sale {
  width: 13%;
  +media-down(xs) {
    border: 0;
    color: transparent;
  }
}

.prices-table .text__pink {
  color: #D32E83;
  text-transform: uppercase;
  display: inline;
  margin: 0;
}

.phone-svg {
  height: 134%;
  width: 100%;
  position: absolute;
  bottom: -22%;
  right: -34%;
  +media-down(xs) {
    display: none;
  }
  +media-down(md) {
    height: 155%;
    bottom: -35%;
  }
  @media (min-width: 2000px) {
    height: 165%;
    bottom: -45%;
  }
  @media (min-width: 2560px) {
    height: 200%;
    bottom: -80%;
  }
  @media (min-width: 3840px) {
    height: 300%
    bottom: -165%;
  }
  & svg, svg use>svg {
    :global(.st0) {
      fill:#DFDFDF;
      stroke:#000000;
    }
    :global(.st1) {
      fill:none;
      stroke:#000000;
    }
    :global(.st2) {
      fill:#DFDFDF;
      stroke:#000000;
    }
    :global(.st3) {
      stroke:#000000;
    }
  }
}

.phone-svg svg {
  height: 100%;
  width: 100%;
  fill: transparent;
  stroke: black;
}