@import '~@/styles/mixins';

.button-get-barbered {
  text-transform: uppercase;
  letter-spacing: 0.6em;
  font-size: 0.6em;
  padding-top: 1.5em;
  padding-bottom: 1.5em;
  padding-left: 2em;
  padding-right: 2em;
  outline: none;
  cursor: pointer;
  +media-down(xs) {
    padding-left: 1em;
    padding-right: 1em;
  }
  border: 1px solid #FFFFFF;
  background-color: transparent;
  color: #FFFFFF;
  &:hover {
    color: #000000;
    background-color: #FFFFFF;
    svg, svg use>svg {
      fill: #000000;
      stroke: #000000;
    }
  }
  & svg, svg use>svg {
    fill: #FFFFFF;
    stroke: #FFFFFF;
  }
  +media-down(md) {
    border: 1px solid #000000;
    background-color: transparent;
    color: #000000;
    &:hover {
      color: #FFFFFF;
      background-color: #000000;
      svg, svg use>svg {
        fill: #FFFFFF;
        stroke: #FFFFFF;
      }
    }
    & svg, svg use>svg {
      fill: #000000;
      stroke: #000000;
    }
  }
}

iframe::selection {
  background: none;
}

.section2 {
  background-image: url("@/assets/raster/2nd.png");
  background-repeat: no-repeat;
  background-size: cover;
  min-height: 100vh;
  display: flex;
  align-content: stretch;
  width: 100%;
  padding: 1.25em;
  padding-top: 6.875em;
  overflow: hidden;
  +media-down(xl) {
    background-color: #E0E0E0;
    background-size: 100% auto;
    background-position: 0% 100%;    
  }
  +media-down(md) {
    padding-top: 5.25em;
    background-image: none;
    background-color: #E0E0E0;
    flex-direction: column;
  }
  +media-down(xs) {
    padding-top: 4em;
  }
}

.for-small {
  display: none;
  text-align: center;
  +media-down(md) {
    padding-top: 3em;
    padding-bottom: 3em;
    display: block;
  }
  +media-down(xs) {
    padding-top: 1.5em;
    padding-bottom: 0;
  }
}

.big-col {
  width: 50%;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  +media-down(md) {
    justify-content: space-around;
  }
}

.left {
  +media-down(md) {
    display: none;
  }
}

.right {
  +media-down(md) {
    width: 100%;
  }
}

.vid {
  width: 100%;
  height: 60%;
  margin-top: 3em;
  +media-down(xl) {
    height: 50vh;
  }
  +media-down(md) {
    height: 35vw;
  }
  +media-down(md) {
    height: 80vw;
  }
}

.first-highlighting {
  animation-name: first;
}

.right-svg {
  transform: rotate(-90deg);
}

.info {
  color: #000000;
  width: 100%;
}

.description {
  margin: 0;
  font-size: 1em;
  +media-down(xl) {
    font-size: 0.85em;
  }
  +media-down(md) {
    font-size: 1em;
  }
  transition: 0.5s ease-out; 
}

.upper {
  font-size: 1.5em;
  text-transform: uppercase;
  text-decoration: none;
  margin-bottom: 1em;
  margin-top: 0;
}