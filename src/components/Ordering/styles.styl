@import '~@/styles/mixins';

.ordering-block {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 101;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.75);
  +media-down(lg) {
    background-color: #212121;
  }
}

.button-close-unvisible {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  border: 0;
  outline: none;
  background-color: transparent;
  +media-down(md) {
    display: none;
  }
}

.ordering-form {
  position: absolute;
  top: 50%;
  right: 50%;
  transform: translateX(50%) translateY(-50%)
  width: 600px;
  height: 300px;
  background-color: #E0E0E0;
  z-index: 102;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 1em;
  +media-down(md) {
    width: 90%;
  }
}

.button-close {
  position: absolute;
  top: 2%;
  right: 1%;
  box-sizing: content-box;
  display: inline-block;
  background-color: transparent;
  border: 0;
  outline: none;
  cursor: pointer;
  z-index: 140;
  & svg, svg use >svg {
    stroke: #000000;
  }
  &:hover {
    transform: scale(1.2);
  }
  +media-down(lg) {
    top: 1%;
    right: 1%;
    transform: none;
    &:hover {
      transform: scale(1.2);
    }
  }
}

.information {
  font-size: 1.2em;
}

.bold-address {
  font-weight: bold;
}

.button-show-map {
  border: 1px solid #D32E83;
  background-color: transparent;
  color: #D32E83;
  text-transform: uppercase;
  letter-spacing: 0.6em;
  font-size: 0.6em;
  height: 40px;
  display: flex;
  align-items: center;
  outline: none;
  cursor: pointer;
  margin-top: 1em;
  &::selection {
    background: #FFFFFF;
  }
  &:hover {
    border: 1px solid #D32E83;
    color: #000000;
    background-color: #D32E83
  }
  & svg {
    fill: #D32E83;
    stroke: #D32E83;
  }
  &:hover svg {
    fill: #000000;
    stroke: #000000;
  }
  +media-down(xs) {
    font-size: 0.8em;
  }
}
