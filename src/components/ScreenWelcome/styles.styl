@import '~@/styles/mixins'

.root {
  text-align: center;
  background-image: radial-gradient(at center, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 1)),
    url('@/assets/raster/wall.png');
  background-repeat: no-repeat;
  background-size: cover, cover;
  background-position: center, center;
  min-height: 100vh;
  max-height: 100%;
  width: 100%;
  display: table;
  table-layout: fixed;
}

.vertical-center-content {
  display: table-cell;
  vertical-align: middle;
  width: 100%;
  height: 100vh;
}

.content {
  color: #FFFFFF;
  & svg, svg use>svg {
    fill: #FFFFFF;
  }
}

.headline {
  text-align: center;
  text-transform: uppercase;
  font-weight: bold;
  font-size: 4.25em;
  line-height: 1.2em;
  margin-bottom: 0;
  +media-down(md) {
    margin-bottom: 0.7em;
  }
  +media-down(xs) {
    font-size: 2.5em;
    margin-bottom: 0.5em;
  }
}

.address {
  font-size: 1.875em;
  font-weight: bold;
  text-transform: uppercase;
  padding-left: 1em;
  padding-right: 1em;
  +media-down(xs) {
    font-size: 1em;
    margin-bottom: 2em;
  }
}

.button {
  border: 1px solid #FFFFFF;
  background-color: transparent;
  color: #FFFFFF;
  text-transform: uppercase;
  letter-spacing: 0.6em;
  font-size: 0.6em;
  padding-left: 2em;
  padding-right: 2em;
  padding-top: 1.5em;
  padding-bottom: 1.5em;
  outline: none;
  cursor: pointer;
  +media-down(xs) {
    padding-left: 1em;
    padding-right: 1em;
    margin-bottom: 3rem;
  }
  svg {
    fill: #FFFFFF;
    stroke: #FFFFFF;
  }
  &:hover {
    color: #000000;
    background-color: #FFFFFF;
    svg {
      fill: #000000;
      stroke: #000000;
    }
  }
}

.apps {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 5%;
  +media-down(xs) {
    width: 100%;
    display: flex;
    justify-content: space-around;
  }
}

.barber-img {
  background-color: #000000;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  height: 100%;
  overflow: hidden;
  mix-blend-mode: screen;
  width: 100%;
  +media-down(xs) {
    display: none;
  }
}

.barber-container {
  width: 100%;
  height: 100%;
  background-color: #000000;
  mix-blend-mode: multiply;
  background-size: cover;
}

.image {
  max-height: 100%;
  max-width: 100%;
  &::selection {
    background: none;
  }
  +media-down(md) {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
  }
}

.barber-video {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  mix-blend-mode: screen;
}

video {
  background-color: transparent !important;
  object-fit: contain;
}
  
