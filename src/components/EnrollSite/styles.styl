@import '~@/styles/mixins';

.enroll-block {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 150;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.75);
  +media-down(lg) {
    background-color: #212121;
  }
}

.enroll-site {
  position: absolute;
  top: 0;
  right: 0;
  width: 50%;
  height: 100%;
  border: 0;
  +media-down(lg) {
    width: 100%;
    height: calc(100% - 50px);
    top: 50px;
  }
}

.button-close {
  position: absolute;
  top: 50%;
  right: 52%;
  transform: translateY(-50%)
  box-sizing: content-box;
  display: inline-block;
  background-color: transparent;
  border: 0;
  outline: none;
  cursor: pointer;
  z-index: 140;
  & svg, svg use >svg {
    stroke: white;
  }
  &:hover {
    transform: translateY(-50%) scale(1.2);
  }
  +media-down(lg) {
    top: 0%;
    right: 1%;
    transform: none;
    &:hover {
      transform: scale(1.2);
    }
  }
}