@import '~@/styles/mixins';

.info-block {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 101;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.75);
  +media-down(lg) {
    background-color: #E0E0E0;
  }
}

.image-viewer {
  position: absolute;
  top: 50%;
  right: 50%;
  transform: translateX(50%) translateY(-50%)
  width: 80%;
  height: 90%;
  padding: 1em;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: contain;
  +media-down(lg) {
    width: 100vmin;
    height: 100%;
  }
}

.button-close-unvisible {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  border: 0;
  outline: none;
  background-color: transparent;
  +media-down(md) {
    display: none;
  }
}

.button-close {
  position: absolute;
  top: 2%;
  right: -5%;
  box-sizing: content-box;
  display: inline-block;
  background-color: transparent;
  border: 0;
  outline: none;
  cursor: pointer;
  z-index: 140;
  & svg, svg use >svg {
    stroke: #FFFFFF;
  }
  &:hover {
    transform: scale(1.2);
  }
  +media-down(lg) {
    top: 1%;
    right: 1%;
    transform: none;
    &:hover {
      transform: scale(1.2);
    }
    & svg, svg use >svg {
      stroke: #D32E83;
    }
  }
}

.button-next-photo {
  width: 60px;
  height: 40px;
  background-color: transparent;
  border: 0;
  padding: 0;
  cursor: pointer;
  transform: translateY(50%);
  & svg, svg use >svg {
    stroke: #FFFFFF;
    fill: none;
  }
  &:hover {
    transform: translateY(50%) scale(1.2);
  }
  outline: none;
}

.left-button {
  position: absolute;
  bottom: 50%;
  left: -5%;
  +media-down(lg) {
    & svg, svg use >svg {
      stroke: none;
      fill: #D32E83;
    }
    left: -2%;
  }
}

.right-button {
  position: absolute;
  bottom: 50%;
  right: -5%;
  +media-down(lg) {
    & svg, svg use >svg {
      stroke: none;
      fill: #D32E83;
    }
    right: -2%;
  }
}

.left-svg {
  transform: rotate(90deg);
}

.right-svg {
  transform: rotate(-90deg);
}

